<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendActivity">

    <!-- 大家的貼文（唯讀） -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRecommend"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/card_post"/>

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="目前沒有可推薦的貼文"
        android:textColor="#9E9E9E"
        android:textSize="16sp"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 底部導覽 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnRecommend"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:contentDescription="推薦功能"
                android:scaleType="fitCenter"
                android:src="@drawable/home2" />

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:contentDescription="搜尋功能"
                android:scaleType="fitCenter"
                android:src="@drawable/search" />

            <ImageButton
                android:id="@+id/btnPath"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:contentDescription="路徑功能"
                android:scaleType="fitCenter"
                android:src="@drawable/path2" />

            <ImageButton
                android:id="@+id/btnProfile"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:contentDescription="個人頁面"
                android:scaleType="fitCenter"
                android:src="@drawable/profile2" />
        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>
