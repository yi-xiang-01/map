<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 右上：只保留清單按鈕 -->
    <ImageButton
        android:id="@+id/btnShowList"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="清單"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/options"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp" />

    <!-- 個人檔頭區（類 IG） -->
    <LinearLayout
        android:id="@+id/profileLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnShowList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 頭像 -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgProfile"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"
            app:strokeWidth="1dp"
            app:strokeColor="@android:color/darker_gray"/>

        <!-- 文字資訊 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用者姓名"
                android:textStyle="bold"
                android:textSize="20sp" />

            <!-- 個人化標籤 (取代 粉絲/貼文/追蹤者) -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupLabels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:singleLine="false"
                app:chipSpacingHorizontal="6dp"
                app:chipSpacingVertical="6dp" />

            <!-- 個人簡介 -->
            <TextView
                android:id="@+id/introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="這是我的個人簡介"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 單顆：編輯個人檔案（Outlined） -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditProfile"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="編輯個人檔案"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/profileLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"/>

    <!-- 分隔線 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1A000000"
        app:layout_constraintTop_toBottomOf="@id/btnEditProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- 三欄貼文格 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnEditProfile"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView" />

    <!-- 底部導覽：貼齊最底部（沿用你的按鈕們，不改功能） -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnRecommend"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:contentDescription="推薦功能"
                android:scaleType="fitCenter"
                android:src="@drawable/home2" />

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:contentDescription="搜尋功能"
                android:scaleType="fitCenter"
                android:src="@drawable/search" />

            <ImageButton
                android:id="@+id/btnPath"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:contentDescription="路徑功能"
                android:scaleType="fitCenter"
                android:src="@drawable/path2" />

            <ImageButton
                android:id="@+id/btnProfile"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:contentDescription="個人頁面"
                android:scaleType="fitCenter"
                android:src="@drawable/profile2" />
        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <!-- 右下：加號 FAB 保留 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:contentDescription="新增項目"
        app:backgroundTint="#79CBF0"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#FFFFFF"
        app:srcCompat="@android:drawable/ic_input_add" />

</androidx.constraintlayout.widget.ConstraintLayout>
